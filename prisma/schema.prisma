// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Reservation {
  id              Int      @id @default(autoincrement())
  idReservation   String   @unique
  nom             String
  email           String?
  telephone       String
  date            String
  heure           String
  estheticienne   String
  service         String
  commentaire     String?
  statut          String   @default("En cours")
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}
